<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_event_mangement_tree" model="ir.ui.view">
        <field name="name">event.mangement.tree</field>
        <field name="model">event.mangement</field>
        <field name="arch" type="xml">
            <tree string="Events">
                <field name="name" optional="show"/>
                <field name="no_seats" optional="hide"/>
            </tree>
            
        </field>
    </record>
   <record id="action_event_mangement" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event.mangement</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new event
            </p>
        </field>
    </record>
</odoo>