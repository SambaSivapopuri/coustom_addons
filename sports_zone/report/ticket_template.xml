<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="report_ticket_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <div class="page" style="font-family: Arial, sans-serif; font-size:12px;">
                <h3 style="text-align:center; margin-bottom: 8px;">Ticket - <t t-esc="doc.name"/></h3>

                <div style="display: flex; justify-content: space-between;">
                    <!-- Left: Bordered Table -->
                    <table style="border-collapse: collapse; width: 60%;">
                        <tr><td style="border:1px solid #000; padding:2px;">Customer</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.customer_id.name"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Mobile</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.mobile_no"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Event</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.event_id.name"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Date</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.booking_date.strftime('%Y-%m-%d')"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Tickets</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.no_tickets"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Price</td><td style="border:1px solid #000; padding:2px;">₹<t t-esc="doc.price"/></td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Discount</td><td style="border:1px solid #000; padding:2px;"><t t-esc="doc.discount"/>%</td></tr>
                        <tr><td style="border:1px solid #000; padding:2px;">Total</td><td style="border:1px solid #000; padding:2px;">₹<t t-esc="doc.total_amount"/></td></tr>
                    </table>

                    <!-- Right: QR Code -->
                    <div style="width: 35%; text-align: center;">
                        <p style="margin: 0;"><strong>QR Code</strong></p>
                        <img t-if="doc.qr_code"
                             t-att-src="'data:image/png;base64,' + doc.qr_code" 
                             style="width: 100px; height: 100px; border: 1px solid #000;"/>
                    </div>
                </div>
            </div>
        </t>
      </t>
    </template>
 </data>
</odoo>