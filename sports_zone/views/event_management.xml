<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_event_management_tree" model="ir.ui.view">
        <field name="name">event.management.tree</field>
        <field name="model">event.management</field>
        <field name="arch" type="xml">
            <tree string="Events" class="text-center" default_order="create_date desc">
                <field name="name" optional="show"/>
                <field name="no_seats" optional="show"/>
                <field name="price" optional="show"/>
                <field name="category" optional="show"/>
            </tree>
        </field>
    </record>

    <odoo>
    <!-- Tree View -->
    <record id="view_event_management_tree" model="ir.ui.view">
        <field name="name">event.management.tree</field>
        <field name="model">event.management</field>
        <field name="arch" type="xml">
            <tree string="Events" class="text-center" default_order="create_date desc">
                <field name="name" optional="show"/>
                <field name="no_seats" optional="show"/>
                <field name="price" optional="show"/>
                <field name="category" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Search View with Filters -->
    <record id="view_event_management_search" model="ir.ui.view">
        <field name="name">event.management.search</field>
        <field name="model">event.management</field>
        <field name="arch" type="xml">
            <search string="Search Events">
                <field name="name"/>
                <field name="category"/>
                <filter name="filter_adult" string="Adult" domain="[('category', '=', 'adult')]"/>
                <filter name="filter_child" string="Child" domain="[('category', '=', 'child')]"/>
                <filter name="filter_combo" string="Combo" domain="[('category', '=', 'combo')]"/>
            </search>
        </field>
    </record>
</odoo>


<record id="view_event_management_form" model="ir.ui.view">
    <field name="name">event.management.form</field>
    <field name="model">event.management</field>
    <field name="arch" type="xml">
        <form string="Event">
            <sheet>
            <group >
                <group >
                    <field name="name" optional="show"/>
                </group>
                <group col="4">
                    <field name="no_seats" optional="show"/>
                </group>
                 <group col="4">
                    <field name="price" optional="show"/>
                </group>
                 <group col="4">
                <field name="discount"/>
                </group>
                 <group col="4">
                <field name="category"/>
                </group>
            </group >
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </sheet>
        </form>
    </field>
</record>



    <record id="action_event_management" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event.management</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Event
            </p>
        </field>
    </record>

    
</odoo>
